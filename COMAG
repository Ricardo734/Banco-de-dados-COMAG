

-- Estrutura do Banco


CREATE TABLE beneficiarios_sopa (  

    id INT AUTO_INCREMENT PRIMARY KEY,  

    nome VARCHAR(100) NOT NULL,  

    endereco VARCHAR(255),  

    telefone VARCHAR(20),  

    data_referencia DATE,  

    quantidade_sopa DECIMAL(5, 2), -- Quantidade de sopa recebida (em litros ou outro formato)  

    observacoes TEXT,  

    data_cadastro TIMESTAMP DEFAULT CURRENT_TIMESTAMP  

);  

   

